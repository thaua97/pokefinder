.pf-card
    width 100%
    height 10.18rem
    border-radius 0.5rem

    @media screen and (min-width: 768px)
        height 13rem

    &__content
        display flex
        flex-direction column
        align-items center
        justify-content center
        padding .75rem

        &--vertical
            color $shape

        &--line
            flex-direction column
            align-items center
            justify-content space-around
            padding .90rem
            text-align center

            h1
                color $title
                font-weight 700

            @media screen and (min-width: 768px)
                flex-direction row
                align-items center
                justify-content space-around
                padding .90rem
                text-align right

    &__logo
        height 5.93rem
        margin-top .8rem
        filter drop-shadow(0 0 0.25rem $text)

    &__poke
        width 6rem

        @media screen and (min-width: 768px)
            width 10rem
            margin-top 1rem
