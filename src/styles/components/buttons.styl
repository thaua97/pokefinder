.pf-btn
    padding .25rem 1rem
    color $text
    font-weight 500
    font-size 1.5rem
    background $button
    border-radius .25rem
    transition filter .5s ease-in-out

    &:hover
        filter drop-shadow(0 0 0.3rem $black-glass)

    &--active
        background $shield.default
        color $light-glass

    &--high
        margin-top 2rem
        height 4rem

    &--disabled
        color $black-glass
        pointer-events none
        cursor not-allowed

