.pf-align
    display flex
    width 100%
    gap 1rem

    &--column
        flex-direction column
        align-items flex-start
        justify-content flex-start
        text-align left

    &--left
        align-items center
        justify-content flex-start

    &--between
        align-items center
        justify-content space-between
        gap 2rem
        white-space nowrap

        @media screen and (min-width: 768px)
            gap 10rem

